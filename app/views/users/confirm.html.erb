<h2>Sign Up confirmation</h2>
<h4>Are you Sure these values are correct?</h4>

<h5>Email:<%= @user.email %></h5>
<h5>Name: <%= @user.name %></h5>

<div class="row">
  <div class="col-md-2">
    <%= button_to "Yes",
    {controller: "users", action: "create", params: params.to_unsafe_h},\
    class: 'btn btn-success' %>
  </div>
  <div class="col-md-2">
    <%= button_to "No", new_user_path , method: :get, class: 'btn btn-default' %>
  </div>
</div>
