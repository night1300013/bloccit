<div class="media">
  <%= render partial: 'votes/voting', locals: { post: favorite.post} %>
  <div class="media-body">
    <h4 class="media-heading">
      <%= link_to favorite.post.title, topic_post_path(favorite.post.topic, favorite.post)%>
    </h4>
    <h5>
      <%= image_tag favorite.post.user.avatar_url(48) %> :
      <%= pluralize(favorite.post.user.votes.count, "vote") %> &
      <%= pluralize(favorite.post.user.comments.count, "comment") %>
    </h5>
  </div>
</div>
